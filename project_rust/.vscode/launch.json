    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo test",
            "cargo": {
                "args": [
                    "test",
                    "--",
                    "--nocapture"
                ]
            },
            "program": "${cargo:program}",
            "args": []
        },


        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'project_rust'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=project_rust",
                    "--package=project_rust"
                ],
                "filter": {
                    "name": "project_rust",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'project_rust'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=project_rust",
                    "--package=project_rust"
                ],
                "filter": {
                    "name": "project_rust",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}